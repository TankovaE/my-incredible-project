<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a class="active" href="#login">Sign in</a></li>
                <li class="tab col s6"><a href="#register">Sign up</a></li>
            </ul>
        </div>
        <div id="login" class="col s6 offset-s3">

            {{#if loginError}}
            <p class="alert">{{loginError}}</p>
            {{/if}}

            <h1>Sign in</h1>
            <form action="/auth/login" method="POST">
                <div class="input-field">
                    <input id="email" name="email" type="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Type email" data-success="right"></span>
                </div>
                <div class="input-field">
                    <input id="password" name="password" type="password" class="validate" required>
                    <label for="password">Password</label>
                    <span class="helper-text" data-error="Type password" data-success="right"></span>
                </div>
                {{!-- middleware csrf будет смотреть на input с спец названием _csrf, для того, чтобы сравнить токен,
                который придет в value --}}
                {{!-- {{csrf}} приходит в views с помощью middleware variables --}}
                {{!-- добавляем этот спец input для всех форм, которые обрабатывают POST зыпрос --}}
                <input type="hidden" name="_csrf" value="{{csrf}}" />
                <button class="btn btn-primary" type="submit">Submit</button>
            </form>
        </div>
        <div id="register" class="col s6 offset-s3">
            {{#if registerError}}
            <p class="alert">{{registerError}}</p>
            {{/if}}

            <h1>Sign up</h1>
            <form action="/auth/register" method="POST">
                <div class="input-field">
                    <input id="remail" name="email" type="email" class="validate" required>
                    <label for="remail">Email</label>
                    <span class="helper-text" data-error="Type email" data-success="right"></span>
                </div>
                <div class="input-field">
                    <input id="name" name="name" type="text" class="validate" required>
                    <label for="name">Name</label>
                    <span class="helper-text" data-error="Type name" data-success="right"></span>
                </div>
                <div class="input-field">
                    <input id="rpassword" name="password" type="password" class="validate" required>
                    <label for="rpassword">Password</label>
                    <span class="helper-text" data-error="Type password" data-success="right"></span>
                </div>
                <div class="input-field">
                    <input id="confirm" name="confirm" type="password" class="validate" required>
                    <label for="confirm">Repit password</label>
                    <span class="helper-text" data-error="Type password" data-success="right"></span>
                </div>
                {{!-- middleware csrf будет смотреть на input с спец названием _csrf, для того, чтобы сравнить токен,
                который придет в value --}}
                {{!-- {{csrf}} приходит в views с помощью middleware variables --}}
                {{!-- добавляем этот спец input для всех форм, которые обрабатывают POST зыпрос --}}
                <input type="hidden" name="_csrf" value="{{csrf}}" />
                <button class="btn btn-primary" type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>