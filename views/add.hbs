<h1>Add</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required>
        <label for="title">Course name</label>
        <span class="helper-text" data-error="Type name" data-success="right"></span>
    </div>
    <div class="input-field">
        <input id="price" name="price" type="text" class="validate" required min="1">
        <label for="price">Course price</label>
        <span class="helper-text" data-error="Type price" data-success="right"></span>
    </div>

    <div class="input-field">
        <input id="image" name="image" type="text" class="validate" required>
        <label for="image">Course image</label>
        <span class="helper-text" data-error="Type url" data-success="right"></span>
    </div>
    <button class="btn btn-primary">Add course</button>
</form>